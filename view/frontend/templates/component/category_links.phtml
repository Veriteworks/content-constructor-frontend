<?php
/** @var $block \MageSuite\ContentConstructorFrontend\Block\Component\CategoryLinks */
$componentConfiguration = $block->getData();
$visibilityClass = $this
    ->helper(\MageSuite\ContentConstructorFrontend\Helper\ComponentVisibility::class)
    ->getVisibilityClass($componentConfiguration);

$viewModel = $block->getViewModel();
$categories = $viewModel->getCategories();
$subCategories = $categories['sub_categories'];

?>
<div class="<?=$visibilityClass?>">
    <div class="cs-category-links <?php if(count($subCategories)< 1): ?>cs-category-links--no-subcats <?php endif; ?>" data-mage-init='{"collapsible":{"mediaQueryScope":"(max-width: 767px)"}}'>
        <h2 class="cs-category-links__title"><?= $categories['main_category']['name'] ?></h2>

        <div class="cs-category-links__dropdown cs-category-links-dropdown <?php if(count($subCategories)< 1): ?> cs-category-links-dropdown--no-subcats <?php endif; ?>">
            <?php if(count($subCategories) >= 1): ?>
            <div class="cs-category-links__subtitle | cs-category-links-dropdown__trigger" data-role="title">
                <?=__('All Products')?> <?php if($block->getData('shownumbers')): ?><span class="cs-category-links__qty"><?=$categories['main_category']['products_count']?></span><?php endif; ?>
            </div>
            <?php endif; ?>


            <div class="cs-category-links__list-wrapper | cs-category-links-dropdown__content" data-role="content">
                <?php if(count($subCategories) >= 1): ?>
                <ul class="cs-category-links__list">
                    <?php foreach($subCategories as $category): ?>
                    <?php $i = 0; ?>
                    <li class="cs-category-links__list-item <?php if($i >= 5): ?>cs-hide-tablet<?php endif; ?>">
                        <a href="<?=$category['url']?>" class="cs-category-links__link">
                            <?=$category['name']?> <?php if($block->getData('shownumbers')): ?><span class="cs-category-links__qty"><?=$category['products_count']?></span><?php endif; ?>
                        </a>
                    </li>
                    <?php $i++; ?>
                    <?php endforeach; ?>
                </ul>
                <?php endif; ?>

                <ul class="cs-category-links__list-all">
                    <li class="cs-category-links__list-all-item">
                        <a href="<?=$categories['main_category']['url']?>" class="cs-category-links__link">
                            <?= __('All Products') ?> <?php if($block->getData('shownumbers')): ?> <span class="cs-category-links__qty"><?=$categories['main_category']['products_count']?></span><?php endif; ?>
                            <svg class="cs-category-links__list-all-icon">
                                <use xlink:href="#icon_arrow-right"></use>
                            </svg>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
